{
	"name": "@wholly-trinity/root",
	"type": "module",
	"bin": {
		"tmux-dev": "./bin/tmux-dev.sh",
		"tmux-rename-window": "./bin/tmux-rename-window.sh"
	},
	"scripts": {
		"dev": "cd apps/web && PATH=./node_modules/.bin:$PATH solid-start dev -p $WEB_PORT",
		"build": "cd apps/web && PATH=./node_modules/.bin:$PATH solid-start build",
		"start": "cd apps/web && PATH=./node_modules/.bin:$PATH solid-start start"
	},
	"dependencies": {
		"@wholly-trinity/api": "workspace:*"
	},
	"devDependencies": {
		"@ctx-core/monorepo": "^18.4.10",
		"@vercel/node": "^2.5.13",
		"@wholly-trinity/root": "workspace:*",
		"@wholly-trinity/types": "workspace:*",
		"pnpm": "^7.9.5",
		"vercel": "^28.2.2"
	},
	"pnpm": {
		"overrides": {
			"babel-preset-solid": "latest",
			"chalk": "2.4.2",
			"solid-js": "latest",
			"solid-start": "next",
			"solid-start-cloudflare-workers": "next",
			"solid-start-node": "next",
			"solid-start-vercel": "next",
			"terser": "latest",
			"vite": "latest",
			"vite-plugin-solid": "latest"
		},
		"packageExtensions": {
			"@ctx-core/ui-solid": {
				"dependencies": {
					"terser": "latest"
				}
			},
			"solid-start": {
				"dependencies": {
					"solid-js": "latest"
				},
				"peerDependencies": {
					"solid-js": "latest"
				}
			},
			"vite": {
				"dependencies": {
					"terser": "latest"
				},
				"peerDependenciesMeta": {
					"terser": {
						"optional": false
					}
				}
			},
			"vite-plugin-solid": {
				"dependencies": {
					"terser": "latest",
					"vite": "latest"
				},
				"dependenciesMeta": {
					"terser": {
						"injected": true
					},
					"vite": {
						"injected": true
					}
				}
			}
		}
	}
}
